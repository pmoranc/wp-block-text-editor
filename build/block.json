{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "blocks-course/text-editor",
  "version": "0.1.0",
  "title": "Text Editor",
  "category": "widgets",
  "icon": "smiley",
  "description": "Example block scaffolded with Create Block tool.",
  "example": {},
  "supports": {
    "html": false
  },
  "textdomain": "text-editor",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "viewScript": "file:./view.js",
  "attributes": {
    "text": {
      "type": "string",
      "source": "html",
      "selector": "h4"
    },
    "alignment": {
      "type": "string",
      "default": "left"
    },
    "textColor": {
      "type": "string"
    },
    "backgroundColor": {
      "type": "string"
    },
    "customTextColor": {
      "type": "string"
    },
    "customBackgroundColor": {
      "type": "string"
    }
  }
}